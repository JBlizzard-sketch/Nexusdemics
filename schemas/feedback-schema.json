{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "chatId": {
      "type": "string",
      "description": "User chat ID"
    },
    "rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "User rating (1-5 stars)"
    },
    "comment": {
      "type": "string",
      "maxLength": 500,
      "description": "User feedback comment"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Feedback timestamp"
    },
    "draftId": {
      "type": "string",
      "description": "Associated draft ID"
    }
  },
  "required": ["chatId", "rating", "timestamp"]
}